<resources>
  <style name="AppTheme" parent="AppTheme.Base"/>

  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/background_app</item>
    <item name="android:colorBackground">@color/background_app</item>

    <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>

    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/primary_dark</item>
    <item name="colorControlHighlight">@color/color_control_highlight</item>
  </style>

  <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:popupBackground">@color/background_app</item>
  </style>
</resources>

